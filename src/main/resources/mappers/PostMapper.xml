<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.studyboard.domain.post.PostMapper">

    <!-- tb_post 테이블 전체 컬럼 -->
    <sql id="postColumns">
        post_idx
        , user_id
        , title
        , content
        , name
        , view_cnt
        , code
        , delete_yn
        , created_date
        , modified_date
    </sql>


    <!-- 게시글 저장 -->
    <insert id="save" parameterType="com.example.studyboard.domain.post.PostRequest">
        INSERT INTO tb_post (
        <include refid="postColumns" />
        ) VALUES (
        #{post_idx}
        , #{user_id}
        , #{title}
        , #{content}
        , #{name}
        , 0
        , #{code}
        , 0
        , NOW()
        , NULL
        )
    </insert>


    <!-- 게시글 상세정보 조회 -->
    <select id="findByPostIdx" parameterType="String" resultType="com.example.studyboard.domain.post.PostResponse">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_post
        WHERE
        post_idx = #{value}
    </select>


    <!-- 게시글 수정 -->
    <update id="update" parameterType="com.example.studyboard.domain.post.PostRequest">
        UPDATE tb_post
        SET
        modified_date = NOW()
        , title = #{title}
        , content = #{content}
        , name = #{name}
        , code = #{code}
        WHERE
        post_idx = #{post_idx}
    </update>


    <!-- 게시글 삭제 -->
    <delete id="deleteByPostIdx" parameterType="String">
        UPDATE tb_post
        SET
        delete_yn = 1
        WHERE
        post_idx = #{post_idx}
    </delete>


    <!-- 게시글 리스트 조회 -->
    <select id="findAll" resultType="com.example.studyboard.domain.post.PostResponse">
        SELECT
        <include refid="postColumns" />
        FROM
        tb_post
        WHERE
        delete_yn = 0
        ORDER BY
        post_idx DESC
    </select>

</mapper>